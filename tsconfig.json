{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "resolveJsonModule": true
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "resolveFullExtension": ".js"
  },
  "include": [
    "src/**/*",
    "src/types/fastify.d.ts",
    "src/config/**/*",
    "tests/**/*"
  ],
  "exclude": ["node_modules"]
}
